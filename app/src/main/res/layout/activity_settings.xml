<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context=".Settings"
    tools:layout_editor_absoluteY="25dp">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/text_input_edit_name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="#003E5E"
            android:textColorHint="#003E5E"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:theme="@style/TextLabel" />

        <TextView
            android:id="@+id/text_input_edit_last_name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="#003E5E"
            android:textColorHint="#003E5E"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:theme="@style/TextLabel" />

        <TextView
            android:id="@+id/text_input_edit_email2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="#003E5E"
            android:textColorHint="#003E5E"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:theme="@style/TextLabel" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_pipchange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:passwordToggleDrawable="@drawable/icon_selector"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#003E5E" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_input_edit_pipchange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:hint="Set Margin for future subscriptions"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="#003E5E"
            android:textColorHint="#003E5E"
            android:theme="@style/TextLabel" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/menu_button_saveChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginHorizontal="40dp"
            android:background="#003E5E"
            android:text="Save"
            android:textColor="@android:color/white" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/menu_button_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginHorizontal="40dp"
            android:background="#db3434"
            android:text="Logout"
            android:textColor="@android:color/white" />

    </android.support.v7.widget.LinearLayoutCompat>

</RelativeLayout>

